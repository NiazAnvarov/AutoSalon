<Page x:Class="Avtosalon.EmployAythPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Avtosalon"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployAythPage">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Вход для сотрудника" FontSize="20" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <TextBlock Text="Логин  " FontSize="20" VerticalAlignment="Center"/>
                <TextBox Name="EmployAuthLoginBox" Margin="5" Width="200" FontSize="20"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <TextBlock Text="Пароль" FontSize="20" VerticalAlignment="Center"/>
                <TextBox Name="EmployAuthPaswBox" Margin="5" Width="200" FontSize="20"/>
            </StackPanel>
            <Button Content="Вход" Name="EmplAuthButton" Click="EmplAuthButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
